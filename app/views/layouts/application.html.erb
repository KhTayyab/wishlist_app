<!DOCTYPE html>
<html>
  <head>
    <title>Wish List</title>
    <link rel="icon" type="image/ico" href="wish-list.png" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Wish List</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          	<li class="wish_lists_path"><%= link_to  "Wish List", wish_lists_path(:shop => params[:shop]) %></li>
            <li class="wish_list_reports_path"><%= link_to  "Report", wish_list_reports_path(:shop => params[:shop]) %></li>
            <li class="app_configurations"><%= link_to  "Configurations", app_configurations_path(:shop => params[:shop]) %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div style="margin-top: 6%;">
      <div class="page-content">
        <div class="container-fluid">
          <%=render "shared/notices"%>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>

<script type="text/javascript">
	$(function()
	{
		var path = window.location.pathname
		if (path == "/wish_lists") {
			$('.wish_lists_path').addClass('active')
			$('.wish_list_reports_path').removeClass('active')
      $('.app_configurations').removeClass('active')
		}
    else if (path == "/") {
      $('.wish_lists_path').addClass('active')
      $('.wish_list_reports_path').removeClass('active')
      $('.app_configurations').removeClass('active')
    }
    else if (path == "/app_configurations") {
      $('.wish_lists_path').removeClass('active')
      $('.wish_list_reports_path').removeClass('active')
      $('.app_configurations').addClass('active')
    }
    else if (path == "/wish_lists/wish_list_by_customer")
    {
      $('.wish_lists_path').addClass('active')
      $('.wish_list_reports_path').removeClass('active') 
      $('.app_configurations').removeClass('active')
    }
    else if (path == "/wish_lists/wish_list_by_product")
    {
      $('.wish_lists_path').addClass('active')
      $('.wish_list_reports_path').removeClass('active') 
      $('.app_configurations').removeClass('active')
    }
		else
		{
			$('.wish_list_reports_path').addClass('active')
			$('.wish_lists_path').removeClass('active')
      $('.app_configurations').removeClass('active')
		}
	});
</script>
